  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\cli.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "args": [
        "-topengles2",
        "sample/sample.frag",
        "-o",
        "sample/sample.frag.h"
      ],
      "preLaunchTask": "${defaultBuildTask}"
    }
  ]
}
